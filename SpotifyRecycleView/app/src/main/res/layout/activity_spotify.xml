<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorRecycleView"
    tools:context=".ui.activities.SpotifyActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playerOptions">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/playerOptions"
        android:paddingTop="@dimen/padding_top_layout_player_options"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_layout_player_options"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/halfTransparentBlack">

        <ImageView
            android:id="@+id/iv_skipPrevious"
            android:layout_width="@dimen/width_buttons_player_options"
            android:layout_height="@dimen/height_buttons_player_options"
            android:background="@drawable/ic_skip_previous"
            android:layout_marginRight="@dimen/margin_right_buttons_player_options" />

        <ImageView
            android:id="@+id/iv_fastRewind"
            android:layout_width="@dimen/width_buttons_player_options"
            android:layout_height="@dimen/height_buttons_player_options"
            android:background="@drawable/ic_fast_rewind"
            android:layout_marginRight="@dimen/margin_right_buttons_player_options" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/width_buttons_player_options"
            android:layout_height="@dimen/height_buttons_player_options"
            android:layout_marginRight="@dimen/margin_right_buttons_player_options" />

        <ImageView
            android:id="@+id/iv_fastForward"
            android:layout_width="@dimen/width_buttons_player_options"
            android:layout_height="@dimen/height_buttons_player_options"
            android:background="@drawable/ic_fast_forward"
            android:layout_marginRight="@dimen/margin_right_buttons_player_options" />

        <ImageView
            android:id="@+id/iv_skipNext"
            android:layout_width="@dimen/width_buttons_player_options"
            android:layout_height="@dimen/height_buttons_player_options"
            android:background="@drawable/ic_fast_forward"
            android:layout_marginRight="@dimen/margin_right_buttons_player_options" />
    </LinearLayout>
</RelativeLayout>
